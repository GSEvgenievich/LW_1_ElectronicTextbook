<Page x:Class="ElectronicTextbook.Pages.TestResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicTextbook.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Результаты теста">
    <DockPanel Background="#FFFDD0">
        <Grid DockPanel.Dock="Top" Height="40" Background="#556B2F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ToTestButton" Content="К тесту" Margin="5" 
            Padding="10,2" VerticalAlignment="Center" Click="ToTestButton_Click"/>
            <TextBlock Text="{Binding UserLoginText}" Grid.Column="2" 
               VerticalAlignment="Center" Margin="0,0,10,0" 
               Foreground="#FFFDD0" FontWeight="SemiBold"/>
            <Button Grid.Column="3" Content="Личный кабинет" Margin="0,5,10,5" Padding="10,2"
            VerticalAlignment="Center" />
        </Grid>

        <TextBlock DockPanel.Dock="Top" Text="{Binding TestName}" 
            Margin="15 5" FontWeight="Bold" FontSize="24" 
            Foreground="#556B2F"/>
        <Border DockPanel.Dock="Top" Height="5" Background="#556B2F" Margin="5 0" CornerRadius="5"/>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15">
            <StackPanel Margin="10 0">
                <TextBlock Text="Результат прохождения теста:" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>
                <TextBlock Text="{Binding CorrectAnswers, StringFormat='Правильные ответы: {0}'}" FontSize="14" Margin="0 0 0 5"/>
                <TextBlock Text="{Binding TotalQuestions, StringFormat='Всего вопросов: {0}'}" FontSize="14" Margin="0 0 0 5"/>
                <TextBlock Text="{Binding Percentage, StringFormat='Процент: {0:F2}%'}" FontSize="14" Margin="0 0 0 5"/>
                <TextBlock Text="{Binding Grade, StringFormat='Оценка: {0}'}" FontSize="16" FontWeight="Bold" Foreground="Green" Margin="0 0 0 20"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Page>